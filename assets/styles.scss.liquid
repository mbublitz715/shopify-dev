/* CUSTOM NAV */
header.navigation {
  background-color: #fff;
  min-height: 40px;
  height: 55px;
  margin: 0 auto;
  z-index: 1002;
  transition: height 0.3s;
  /*//sticky styles*/
  position: fixed;
  width: 100%;
  right: 0;
  left: 0;
  top: 0;
  -webkit-box-flex: 0;
  -webkit-flex: none;
  flex: none;
  &.home-banner {
    height: $navigation-height-home;
  }
  @media (min-width: 768px) {
    height: $navigation-height-tablet;
    &.home-banner {
      height: $navigation-height-tablet-home;
    }
  }
  @media (min-width: 1200px) {
    height: $navigation-height-horizontal;
    &.home-banner {
      height: $navigation-height-horizontal-home;
    }
  }
  
  &.scrolled-nav {
    border-bottom: 1px solid #dcdfde;
    height: 55px;
    @media (min-width: 1200px) {
        height: 70px;
        border-bottom: 1px solid #dcdfde;
        .navigation-wrapper {
          padding-top: 9px;
          svg {
            margin-top: 14px;
          }
        }
      }
    nav {
      margin-top: 1px;
    }
    ul li.nav-link.free-ship {
      visibility: hidden;
      opacity: 0;
    }
    .banner, .banner.red {
      visibility: hidden;
      opacity: 0;
      height: 0;
      padding: 0;
    }
  }
  .navigation-wrapper {
    margin-left: auto;
    margin-right: auto;
    z-index: 9999;
    padding-top: 20px;
    @media (min-width: 1200px) {
      position: relative;
      width: 1200px;
      padding-top: 56px;
      transition: padding 0.3s;
      background-color: #fff;
    }
  }
  .logo {
    @media (min-width: 1200px) {
      float: left;
      padding-left: 20px;
    }
    svg {
      width: 110px;
      height: 20px;
      transition: margin 0.3s;
      position: absolute;
      left: 0;
      right: 0;
      margin: -4px auto 0;
      @media (min-width: 1200px) {
        margin: 8px 0 0;
        width: 127px;
        height: 23px;
        position: relative;
      }
    }
  }
  /*// Mobile view*/
  .mobile-only {
    @media (min-width: 1200px) {
      display: none;
    }
    .navigation-menu-button, .mobile-buy .buy-now {
      line-height: 1;
      font-size: 14px;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .navigation-menu-button {
      color: $navy;
      float: left;
      text-decoration: none;
      margin: -2px 0 0 20px;
      background-color: transparent;
      padding: initial;
      height: 20px;
      width: 25px;
    }
    .mobile-buy {
      float: right;
      margin-top: -12px;
      margin-right: 20px;
      @media (min-width: 1200px) {
        margin-top: -10px;
        margin-right: 0;
      }
    }
  }
  /*// Nav menu*/
  nav {
    float: none;
    min-height: 40px;
    z-index: 9999999;
    @media (min-width: 1200px) {
      float: right;
    }
  }
  #mobile-overlay {
    height: 0%;
    width: 100%;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: $navy;
    overflow: hidden;
    transition: 0.4s;
    @media (min-width: 1200px) {
      position: static;
      background-color: transparent;
      transition: none;
      overflow: visible;
    }
  }
  #js-mobile-menu-close {
    position: absolute;
    top: 15px;
    left: 15px;
    height: 30px;
    width: 30px;
    cursor: pointer;
    padding: initial;
  background-color: transparent;
    @media (min-width: 1200px) {
      display: none;
    }
    &:after,
    &:before {
      position: absolute;
      top: 3px;
      right: 3px;
      bottom: 0;
      left: 50%;
      -webkit-transform: rotate(45deg);
      -moz-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      -o-transform: rotate(45deg);
      transform: rotate(45deg);
      height: 20px;
      width: 2px;
      background: $teal;
      content: '';
      display: block;
    }
    &:hover:after,
    &:hover:before {
      background: #6bc1b6;
    }

    &:before {
      -webkit-transform: rotate(-45deg);
      -moz-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
      transform: rotate(-45deg);
    }
  }
  ul.navigation-menu {
    clear: both;
    display: none;
    margin: 0 auto;
    // overflow-y: scroll;
    padding: 0;
    width: 100%;
    z-index: 9999;
  @media (min-width: 1200px) {
      display: flex;
      margin: 0;
      padding: 0;
    }
    &.show {
      display: block;
      position: relative;
      top: 10%;
      width: 100%;
      text-align: center;
      overflow: hidden;
      @media (min-width: 1200px) {
        position: static;
        overflow: visible;
        text-align: left;
      }
    }

    
  }
  /*// The nav items*/
  ul li.nav-link {
    display: block;
    line-height: 36px;
    text-align: center;
    width: 100%;
    z-index: 9999;
    margin-bottom: 18px;
    position: relative;
    text-transform: uppercase;
    @media (max-height: 420px) {
      margin-bottom: 0;
    }
    @media (min-width: 1200px) {
      line-height: 40px;
      display: inline;
      text-decoration: none;
      padding-right: 24px;
      width: auto;
      margin-bottom: 0;
      &:last-of-type {
        padding-right: 0;
      }
    }
    &.active {
      a {
        color: $teal;
      }
    }
    &.free-ship {
      margin-top: 20px;
      opacity: 100;
      visibility: visible;
      transition: all 0.3s;
      color: $red;
      font-weight: 600;
      font-size: 14px;
      position: static;
      &:focus,
      &:hover {
        color: $red;
      }
      @media (min-width: 1200px) {
        margin-top: 0;
        position: absolute;
        top: 6px;
        right: 23px;
      }
    }
    &.no-mobile {
      display: none;
      @media (min-width: 1200px) {
        display: inline;
      }
    }
    a {
      color: #fff;
      font-weight: bold;
      display: inline-block;
      text-decoration: none;
      font-size: 20px;
      @media (min-width: 1200px) {
        color: $navy;
        letter-spacing: .5px;
        font-size: 24px;
        width: auto;
        font-size: 14px;
      }

      &:focus,
      &:hover {
        @media (min-width: 1200px) {
          color: $teal;
        }
      }
      &.buy-now {
        color: #fff;
        font-size: 12px;
      }
      .new-badge {
        border-radius: 4px;
        background-color: $teal;
        color: #fff;
        font-size: 11px;
        margin-right: 5px;
        text-transform: uppercase;
        position: relative;
        top: -3px;
        padding: 1px 5px;
        @media (min-width: 1200px) {
          font-size: 8px;
          padding: 1px 4px;
          top: -2px;
        }
      }
    }
    &#about-menu {
      @media (min-width: 1200px) {
        order: -1;
      }
    }
    &#products-menu .dropdown ul {
      @media (min-width: 1200px) {
        display: flex;
        flex-direction: column;
        li:first-child {
          order: 4;
          border-bottom: none;
        }
        li:last-child {
          border-bottom: 1px solid #EAEEEB;
        }
      }
    }
    &#products-menu > a, &#about-menu > a {
      &:after {
        content: "";
        background: center / contain url('https://cdn.shopify.com/s/files/1/0368/7037/files/icon-caret.svg?v=1613435102') no-repeat;
        display: inline-block;
        width: 14px;
        height: 20px;
        -webkit-transform: rotate(90deg);
        transform: rotate(90deg);
        position: relative;
        right: -15px;
        top: 3px;
      }
      @media (min-width: 1200px) {
        &:after {
          background: none;
          display: none;
        }
      }
    }
    &#products-menu.open > a, &#about-menu.open > a {
      &:after {
        -webkit-transform: rotate(-90deg);
        transform: rotate(-90deg);
      }
    }
    &#products-menu.open .dropdown,
    &#about-menu.open .dropdown {
      display: block;
    }
    &#products-menu:hover .dropdown,
    &#products-menu.focus .dropdown,
    &#about-menu:hover .dropdown,
    &#about-menu.focus .dropdown {
      @media (min-width: 1200px) {
        display: block;
      }
    }
    .dropdown {
      display: none;
      background-color: #325065;
      padding: 14px 0;
      margin-top: 8px;
      @media (min-width: 1200px) {
        position: absolute;
        left: -21px;
        text-align: left;
        background-color: #fff;
        padding: 0 20px 3px;
        border-radius: 4px;
        min-width: 220px;
        top: 30px;
        margin-top: 13px;
        box-shadow: 0px 6px 15px 6px rgba(0,0,0,0.08);
        -webkit-box-shadow: 0px 6px 15px 6px rgba(0,0,0,0.08);
        -moz-box-shadow: 0px 6px 15px 6px rgba(0,0,0,0.08);
      }
      &.show {
        display: block;
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        li {
          margin-bottom: 18px;
          padding: 0;
          line-height: 36px;
          text-transform: none;
          @media (min-width: 1200px) {
            margin: 0;
            line-height: 30px;
            border-bottom: 1px solid #EAEEEB;
            padding: 5px 0;
          }
          &:last-child {
            border-bottom: none;
            margin-bottom: 0;
          }
          &.active a {
            color: $teal;
          }
          a {
            @media (min-width: 1200px) {
              color: $navy;
              letter-spacing: 0;
            }
            &:hover, &:focus {
              color: $teal;
            }
          }
        }
      }
    }
  }
  &:not(.scrolled-nav) .banner {
    background-color: $teal; 
    min-height: 30px;
    opacity: 100;
    visibility: visible;
    text-align: center;
    padding: 8px 10px;
    position: relative;
    @media (min-width: 768px) {
      height: 40px;
      padding: 11px 20px;
    }
    &.red {
      background-color: $red;
    }
    &.two-lines {
      padding: 7px 10px;
      @media (min-width: 768px) {
        padding: 10px 20px;
      }
      div {
        font-size: 14px;
        line-height: 18px;
        @media (min-width: 768px) {
          font-size: 18px;
        }
        span.line-break {
          display: block;
          @media (min-width: 768px) {
            display: inline;
          }
        }
      }
    }
    &.navy {
      background-color: $navy;
    }
    &.heartday {
      background-color: $purple;
      height: $promo-height-mobile-us;
      padding: 7px 20px;
      @media (min-width: 768px) {
        padding: 12px 20px;
        height: $promo-height-desktop-us;
      }
      div {
        font-size: 14px;
        line-height: 18px;
        font-weight: 400;
        @media (min-width: 768px) {
          line-height: 22px;
          font-size: 17px;
        }
        span.line-break {
          @media (min-width: 400px) {
            display: block;
          }
          &.bold {
            font-weight: normal;
            @media (min-width: 400px) {
              font-weight: bold;
            }
            @media (min-width: 768px) {
              font-size: 18px;
            }
          }
        }
        span.period {
          @media (min-width: 400px) {
            display: none;
          }
        }
      }
    }
    &.new-year {
      background-color: $navy;
      padding: 11px 20px;
      @media (min-width: 768px) {
        height: $promo-height-desktop-us;
      }
      @media (min-width: 1200px) {
        padding: 10px 20px;
      }
      div {
        font-size: 18px;
        line-height: 20px;
        @media (min-width: 768px) {
          font-size: 20px;
        }
        @media (min-width: 1200px) {
          font-size: 22px;
        }
        span.light {
          display: block;
          font-size: 17px;
          @media (min-width: 768px) {
            margin-top: 6px;
            font-size: 17px;
          }
          @media (min-width: 1200px) {
            margin-top: 8px;
            font-size: 18px;
          }
        }
        span.line-break {
          display: block;
        }
        span.break-mobile {
          display: block;
          @media (min-width: 768px) {
            display: inline;
          }
        }
        span.lighter {
          font-size: 13px;
          font-style: italic;
          @media (min-width: 768px) {
            font-size: 15px;
          }
        }
        u {
          padding-left: 6px;
        }
      }
    }
    div {
      color: #fff;
      font-size: 14px;
      font-weight: bold;
      line-height: 1;
      display: inline-block;
      overflow: visible;
      white-space: normal;
      display: block;
      @media (min-width: 768px) {
        font-size: 16px;
        white-space: nowrap;
      }
      span.line-two {
        display: block;
      }
      span.mobile-break {
        display: block;
        @media (min-width: 768px) {
          display: inline;
        }
      }
      span.light {
        font-weight: normal;
        // display: block;
        font-size: 13px;
        @media (min-width: 768px) {
          font-size: 15px;
          display: inline;
        }
      }
      span.italic {
        font-weight: normal;
        font-size: 13px;
        font-style: italic;
        padding-left: 2px;
        @media (min-width: 768px) {
          font-size: 14px;
          display: inline;
        }
      }
      span.underline {
        color: $light-teal;
        text-decoration: underline;
      }
      span.bold {
        font-weight: bold;
      }
    }
  }
}

