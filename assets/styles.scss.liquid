$teal: #2d9f86;
$light-teal: #6BC1B6;
$teal-hover: $light-teal;
$grey1: #F1F5F3;
$grey2: #BABFBD;
$grey3: #536062;
$light-grey: #E8E8E9;
$lighter-teal: #E2E7E3;
// $red: #D73E3F;
$red: #f15757;
$navy: #142A39;
$light-blue: #C4E5EC;
$blue: #9DD3DF;
$reviewGrey: #a9afb0;
$fancyFontStack: "arno-pro-display",garamond,serif;
$purple: #885FA5;
$light-purple: #f3eff6;

// Button Vars
$button-border-radius: 10px;
$button-padding: 16px;
$button-font-weight: bold;
$button-text-transform: uppercase;
$button-font-size: 14px;
$button-height: 46px;

// Nav and body height/spacing
$promo-height-desktop: 0;
$promo-height-mobile: 0;
$promo-height-desktop-us: 55px;
$promo-height-mobile-us: 63px;
$navigation-height-home: 55px + $promo-height-mobile;
$navigation-height-tablet-home: 55px + $promo-height-desktop;
$navigation-height-horizontal-home: 120px + $promo-height-desktop;
$navigation-height: 55px;
$navigation-height-tablet: 55px;
$navigation-height-horizontal: 120px;
$navigation-height-home-us: $navigation-height + $promo-height-mobile-us;
$navigation-height-tablet-home-us: $navigation-height-tablet + $promo-height-desktop-us;
$navigation-height-horizontal-home-us: $navigation-height-horizontal + $promo-height-desktop-us;

body {
  padding-top: 55px;
  -webkit-overflow-scrolling: touch;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  height: 100%;
  margin: 0 auto;
  @media (min-width: 1200px) {
    padding-top: 120px;
  }
  &.homepage {
    padding-top: $navigation-height-home;
    @media (min-width: 768px) {
      padding-top: $navigation-height-tablet-home;
    }
    @media (min-width: 1200px) {
      padding-top: $navigation-height-horizontal-home;
    }
  }
  &.en-us {
    padding-top: $navigation-height-home-us;
    @media (min-width: 768px) {
      padding-top: $navigation-height-tablet-home-us;
    }
    @media (min-width: 1200px) {
      padding-top: $navigation-height-horizontal-home-us;
    }
    header.navigation:not(.scrolled-nav) {
      height: $navigation-height-home-us;
      @media (min-width: 768px) {
        height: $navigation-height-tablet-home-us;
      }
      @media (min-width: 1200px) {
        height: $navigation-height-horizontal-home-us;
      }
    }
  }
  &.en-gb {
    padding-top: $navigation-height-home;
    @media (min-width: 768px) {
      padding-top: $navigation-height-tablet-home;
    }
    @media (min-width: 1200px) {
      padding-top: $navigation-height-horizontal-home;
    }
    header.navigation:not(.scrolled-nav) {
      height: $navigation-height-home;
      @media (min-width: 768px) {
        height: $navigation-height-tablet-home;
      }
      @media (min-width: 1200px) {
        height: $navigation-height-horizontal-home;
      }
    }
  }
}
