<div class="form">
  <form action="/cart/add" method="post" enctype="multipart/form-data" id="kardiaCareBundleAddToCartForm" class="AddToCartForm form-vertical" data-productid="{{product.id}}" onsubmit="addToCartKardiaCareDeviceBundle(event, this, 'kardiamobile6l')">
    {% capture 1year_title %}
        1-Year Plan
      {% endcapture %}
      {% capture 2year_title %}
        2-Year Plan
      {% endcapture %}
      {% capture 1month_title %}
        Monthly Plan
      {% endcapture %}
      {% assign 1month_price = "$9.99/month" %}
      {% assign 1year_price = "$99/year" %}
      {% assign 2year_price = "$179/2 years" %}
      {% case shop.domain %}
        {% when 'dev-alivecor-us.myshopify.com' %}
          {% assign 1year_id = 32992175226983 %}
          {% assign 1year_frequency = "12" %}
    {% assign 1year_price_number = "99" %}
          {% assign 1year_price_disclaimer = "$99 after your first year" %}
          {% capture 1year_label %}
          1-Year Plan ($99/year)
          {% endcapture %}
          {% assign 2year_id = 32992089899111 %}
          {% assign 2year_frequency = "24" %}
          {% capture 2year_label %}
          2-Year Plan ($179/two yrs)
          {% endcapture %}
          {% assign 1month_id = 32991987204199 %}
          {% assign 1month_frequency = "1" %}
          {% assign 1month_price_number = "9.99" %}
          {% assign 1month_price_disclaimer = "$9.99 each month" %}
          {% capture 1month_label %}
          Monthly Plan ($9.99/mo)
          {% endcapture %}
          {% assign kardiamobile6l_price = {{product.price | money_without_currency}} %}
          {% assign bundle_sale_amount_annual = "9" %}
          {% assign bundle_sale_amount_monthly = "10" %}
        {% when 'store.kardia.com' %}
          {% assign 1year_id = 32194082472001 %}
          {% assign 1year_frequency = "12" %}
          {% assign 1year_price_number = "99" %}
          {% assign 1year_price_disclaimer = "$99 after your first year" %}
          {% capture 1year_label %}
          1-Year Plan ($99/yr)
          {% endcapture %}
          {% assign 2year_id = 32283255341121 %}
          {% assign 2year_frequency = "24" %}
          {% assign 2year_price_number = "179" %}
          {% assign 2year_price_disclaimer = "$179 after two years" %}
          {% capture 2year_label %}
          2-Year Plan ($179/2 yrs)
          {% endcapture %}
          {% assign 1month_id = 32283254751297 %}
          {% assign 1month_frequency = "1" %}
          {% assign 1month_price_number = "9.99" %}
          {% assign 1month_price_disclaimer = "$9.99 each month" %}
          {% capture 1month_label %}
          Monthly Plan ($9.99/mo)
          {% endcapture %}
          {% assign kardiamobile_id = "20036084615" %}
          {% assign kardiamobile6l_id = "28007532101697" %}
          {% assign kardiamobile_price = "89" %}
          {% assign kardiamobile6l_price = {{product.price | money_without_currency}} %}
          {% assign bundle_sale_amount_annual = "9" %}
          {% assign bundle_sale_amount_monthly = "10" %}
        {% else %}
      {% endcase %}
    <div class="kardiacare-products-bundle" style="margin-top: 18px; border-top: 1px solid #babfbd; padding-top: 18px;">
      <fieldset>
        <legend class="h3">
          Choose your membership plan
        </legend>
        <p>KardiaMobile 6L with KardiaCare gives you the power to record six-lead EKGs and detect 6 of the most common arrhythmiasâ€”the most advanced personal EKG technology in the world.</p>
        <div class="form-radio">
          <label for="{{ 1month_id }}">
            <input
              id="{{ 1month_id }}"
              name="kardiaCareMembershipLength"
              type="radio"
              data-frequency="{{ 1month_frequency }}"
              data-price="{{ 1month_price }}"
              data-price-number="{{ 1month_price_number }}"
              data-price-disclaimer="{{ 1month_price_disclaimer }}"
              data-device-price="{{ kardiamobile6l_price }}"
              data-sale-amount="{{ bundle_sale_amount_monthly }}"
              data-show-sale="false"
              data-price-display-id="kc-6l-price"
              class="field radio"
              value="{{ 1month_id }}"
              tabindex="1"
              onchange=""
              checked="checked"
              required
              autocomplete="off"
             />
             {{ 1month_label }}
          </label>
        </div>
        <div class="form-radio">
          <label for="{{ 1year_id }}">
            <input
              id="{{ 1year_id }}"
              name="kardiaCareMembershipLength"
              type="radio"
              data-frequency="{{ 1year_frequency }}"
              data-price="{{ 1year_price }}"
              data-price-number="{{ 1year_price_number }}"
              data-price-disclaimer="{{ 1year_price_disclaimer }}"
              data-device-price="{{ kardiamobile6l_price }}"
              data-sale-amount="{{ bundle_sale_amount_annual }}"
              data-show-sale="false"
              data-price-display-id="kc-6l-price"
              class="field radio"
              value="{{ 1year_id }}"
              tabindex="1"
              onchange=""
              required
              autocomplete="off"
             />
             {{ 1year_label }}
          </label>
        </div>
        {% comment %}
        <div class="form-radio">
          <label for="non_mem">
            <input
              id="non_mem"
              name="kardiaCareMembershipLength"
              type="radio"
              data-frequency="none"
              data-price-number="0"
              data-device-price="{{ kardiamobile6l_price }}"
              data-price-display-id="kc-6l-price"
              class="field radio"
              value="no_mem"
              tabindex="3"
              onchange=""
              required
              autocomplete="off"
             />
             No membership
          </label>
        </div>
        {% endcomment %}
      </fieldset>
    </div>
    <div class="flex-items-bundle">
      <div class="bundle-price-display">
        <span id="ProductPrice" class="h2Price noFloat">
          $<span id="kc-6l-price">{{ product.price | minus: 1 | money_without_currency }}</span>
        </span>
        {% comment %}
        <span class="strikeout totalBundlePrice">${{ product.price | plus: 999 | money_without_currency }}</span>
        {% endcomment %}
      </div>
      <button
        type="submit"
        name="add"
        id="{{product.id}}AddToCart1"
        class="btn addToCart"
        {% if sold_out %}
          disabled
        {% endif %}
       >
        <span id="AddToCartText">
        {% if sold_out %}
        {{ 'products.product.sold_out' | t }}
        {% elsif preorder %}
        {{ 'products.product.preorder' | t }}
        {% else %}
        {{ 'products.product.add_to_cart' | t }}
        {% endif %}
        </span>
      </button>
    </div>
    <div style="clear: both;"></div>
  </form>
</div>